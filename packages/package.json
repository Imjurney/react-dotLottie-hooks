{
  "name": "@Imjurney/react-lottie-scroll-hooks",
  "version": "1.0.0",
  "description": "React hooks for Lottie animations with scroll triggers using GSAP",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "react",
    "hooks",
    "lottie",
    "animation",
    "scroll",
    "gsap",
    "scrolltrigger",
    "dotlottie"
  ],
  "author": "Imjurney <jurneyx2@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Imjurney/react-dotLottie-hooks",
    "directory": "packages/hooks"
  },
  "homepage": "https://github.com/",
  "bugs": {
    "url": "https://github.com/Imjurney/react-dotLottie-hooks/issues"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "dependencies": {
    "@gsap/react": "^2.1.1",
    "@lottiefiles/dotlottie-react": "^0.8.12",
    "gsap": "^3.12.5"
  },
  "devDependencies": {
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2"
  },
  "publishConfig": {
    "access": "public"
  }
}
